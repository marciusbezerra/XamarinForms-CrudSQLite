<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudSQLite.CustomersPage"
             Title="Cadastro de Clientes :(">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Entry x:Name="CustomerName" Placeholder="Nome do cliente" TextColor="White"></Entry>
            <Entry x:Name="CustomerEmail" Placeholder="Email do Cliente" Keyboard="Email" TextColor="White"></Entry>
            <Button x:Name="ButtonUpdate" Text="Salvar dados" Clicked="ButtonUpdateClicked"></Button>
            <ListView x:Name="ListViewCustomers" BackgroundColor="White"></ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>